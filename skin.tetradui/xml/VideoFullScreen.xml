<?xml version="1.0" encoding="UTF-8"?>
<window>
	<controls>
		<!-- media infos -->
		<control type="group" id="1">
			<visible>[Player.ShowInfo | Window.IsActive(VideoOSD) | !String.IsEmpty(Player.SeekNumeric)] + ![Window.IsVisible(VideoBookmarks) | Window.IsVisible(DialogSettings.xml) | Window.IsVisible(DialogPVRChannelsOSD.xml) | Window.IsVisible(DialogPVRChannelGuide.xml) | Window.IsVisible(124) | Window.IsVisible(125) | Window.IsVisible(1101)]</visible>
			<animation effect="fade" time="200">VisibleChange</animation>
			<control type="image" id="1">
				<top>-150</top>
				<left>-2</left>
				<width>1284</width>
				<height>256</height>
				<texture flipy="true" border="5">FullscreenNowPlayingBack.png</texture>
			</control>
			<control type="label" id="1">
				<description>Chapter Count Header label</description>
				<left>30</left>
				<top>5</top>
				<width>1000</width>
				<height>25</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>font13</font>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<label>$INFO[Player.Chapter,$LOCALIZE[21396]: ]$INFO[Player.ChapterCount, / ]$INFO[Player.ChapterName,[COLOR=grey] - (,)[/COLOR]]</label>
				<visible>Player.ChapterCount</visible>
			</control>
			<control type="label" id="1">
				<description>Timeshift Header label</description>
				<left>30</left>
				<top>35</top>
				<width>1000</width>
				<height>25</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>font13</font>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<label>$LOCALIZE[31247]: $INFO[PVR.TimeshiftCur] (-$INFO[PVR.TimeshiftOffset])</label>
				<animation effect="slide" end="0,-30" condition="!Player.ChapterCount">Conditional</animation>
				<visible>VideoPlayer.Content(LiveTV) + PVR.IsTimeShift</visible>
			</control>
			<control type="label" id="1">
				<description>Clock label</description>
				<left>30</left>
				<top>65</top>
				<width>600</width>
				<height>25</height>
				<aligny>center</aligny>
				<font>font13</font>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<label>$INFO[System.Time]</label>
				<animation effect="slide" end="0,-30" condition="!Player.ChapterCount">Conditional</animation>
				<animation effect="slide" end="0,-30" condition="![VideoPlayer.Content(LiveTV) + PVR.IsTimeShift]">Conditional</animation>
			</control>
			<control type="image" id="1">
				<top>230r</top>
				<left>-2</left>
				<width>1284</width>
				<height>230</height>
				<texture border="5">FullscreenNowPlayingBack.png</texture>
			</control>
			<control type="image" id="1">
				<description>cover image</description>
				<left>20</left>
				<top>260r</top>
				<width>300</width>
				<height>230</height>
				<texture>$INFO[Player.Art(thumb)]</texture>
				<aspectratio aligny="bottom">keep</aspectratio>
				<bordertexture border="19,3,19,3">thumb-border.png</bordertexture>
				<bordersize>17,1,17,1</bordersize>
				<visible>!VideoPlayer.Content(Movies)</visible>
			</control>
			<control type="image" id="1">
				<description>Movie cover image</description>
				<left>20</left>
				<top>370r</top>
				<width>300</width>
				<height>350</height>
				<texture>$VAR[PosterImageOSD]</texture>
				<aspectratio aligny="bottom">keep</aspectratio>
				<bordertexture border="19,3,19,3">thumb-border.png</bordertexture>
				<bordersize>17,1,17,1</bordersize>
				<visible>VideoPlayer.Content(Movies)</visible>
			</control>
			<control type="group" id="1">
				<left>330</left>
				<top>203r</top>
				<control type="label" id="1">
					<description>Heading label</description>
					<width>910</width>
					<height>25</height>
					<align>left</align>
					<font>font13</font>
					<label>$LOCALIZE[31235]</label>
					<textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
					<animation effect="slide" start="0,0" end="0,25" time="0" condition="!Pvr.IsPlayingTv + !Pvr.IsPlayingRadio + !VideoPlayer.Content(Episodes) + !VideoPlayer.Content(MusicVideos)">conditional</animation>
				</control>
				<control type="label" id="1">
					<description>Studio label</description>
					<left>20</left>
					<top>30</top>
					<width>910</width>
					<height>25</height>
					<align>left</align>
					<font>font12</font>
					<label>$VAR[VideoFullScreenLabel]</label>
					<textcolor>grey2</textcolor>
					<shadowcolor>black</shadowcolor>
				</control>
				<control type="label" id="1">
					<left>20</left>
					<top>57</top>
					<width min="10" max="720">auto</width>
					<height>30</height>
					<font>font30</font>
					<align>left</align>
					<aligny>center</aligny>
					<label>$VAR[PVRVideoPlayerSubLabel]</label>
					<textcolor>orange</textcolor>
					<scroll>true</scroll>
				</control>
				<control type="grouplist" id="1">
					<left>18</left>
					<top>90</top>
					<width>910</width>
					<height>35</height>
					<itemgap>5</itemgap>
					<orientation>horizontal</orientation>
					<include>VideoPlayerVideoCodecFlagging</include>
					<include>VideoPlayerAudioCodecFlagging</include>
					<include>VideoPlayerVideoTypeHackFlaggingConditions</include>
					<include>VideoPlayerAspectCodecFlagging</include>
				</control>
				<control type="label" id="1">
					<top>148</top>
					<width>910</width>
					<height>25</height>
					<label>$LOCALIZE[31236] $INFO[Player.FinishTime]$INFO[VideoPlayer.NextTitle, - $LOCALIZE[19031]: , ]$INFO[VideoPlayer.NextStartTime,(, - ]$INFO[VideoPlayer.NextEndTime,,)]</label>
					<align>center</align>
					<aligny>center</aligny>
					<font>font10</font>
					<textcolor>grey</textcolor>
					<scroll>true</scroll>
					<visible>!Window.IsVisible(VideoOSD)</visible>
					<animation effect="fade" time="200">VisibleChange</animation>
				</control>
			</control>
			<control type="group" id="1">
				<left>330</left>
				<top>85r</top>
				<control type="label" id="1">
					<width>100</width>
					<height>40</height>
					<font>font13</font>
					<align>left</align>
					<aligny>center</aligny>
					<label>$INFO[Player.Time(hh:mm:ss)]</label>
				</control>
				<control type="progress" id="1">
					<description>Progressbar cache</description>
					<left>100</left>
					<top>18</top>
					<width>720</width>
					<height>10</height>
					<info>Player.ProgressCache</info>
					<midtexture border="5" colordiffuse="44ffffff">progress_cache.png</midtexture>
				</control>
				<control type="progress" id="1">
					<description>Progressbar</description>
					<left>100</left>
					<top>17</top>
					<width>720</width>
					<height>12</height>
					<info>Player.Progress</info>
					<texturebg border="6,0,6,0">progress_back_2.png</texturebg>
					<visible>!VideoPlayer.HasEpg</visible>
				</control>
				<control type="progress" id="1">
					<description>Progressbar</description>
					<left>100</left>
					<top>17</top>
					<width>720</width>
					<height>12</height>
					<info>PVR.EpgEventProgress</info>
					<texturebg border="6,0,6,0">progress_back_2.png</texturebg>
					<visible>VideoPlayer.HasEpg</visible>
				</control>
				<control type="ranges" id="1">
					<description>CutList</description>
					<left>100</left>
					<top>18</top>
					<width>720</width>
					<height>4</height>
					<info>Player.CutList</info>
					<righttexture border="1">progress_chapter.png</righttexture>
				</control>
				<control type="ranges" id="1">
					<description>Chapters</description>
					<left>100</left>
					<top>24</top>
					<width>720</width>
					<height>4</height>
					<info>Player.Chapters</info>
					<righttexture border="1">progress_chapter.png</righttexture>
				</control>
				<control type="label" id="1">
					<left>820</left>
					<width>100</width>
					<height>40</height>
					<font>font13</font>
					<align>right</align>
					<aligny>center</aligny>
					<label>$INFO[Player.Duration(hh:mm:ss)]</label>
				</control>
				<control type="label" id="1">
					<left>100</left>
					<top>50</top>
					<width>720</width>
					<height>40</height>
					<font>font13</font>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[Player.SeekNumeric(hh:mm:ss)]</label>
					<visible>!String.IsEmpty(Player.SeekNumeric)</visible>
				</control>
			</control>
		</control>
		<!-- codec info -->
		<control type="group" id="0">
			<left>0</left>
			<top>20</top>
			<animation effect="fade" time="200">VisibleChange</animation>
			<control type="image">
				<description>media info background image</description>
				<width>1280</width>
				<height>155</height>
				<colordiffuse>AAFFFFFF</colordiffuse>
				<texture>black-back.png</texture>
			</control>
			<control type="label" id="10">
				<description>row 1 label</description>
				<left>50</left>
				<top>10</top>
				<width>1180</width>
				<height>30</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>font12</font>
				<label />
			</control>
			<control type="label" id="11">
				<description>row 2 label</description>
				<left>50</left>
				<top>40</top>
				<width>1180</width>
				<height>30</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>font12</font>
				<label />
			</control>
			<control type="label" id="12">
				<description>row 3 label</description>
				<left>50</left>
				<top>85</top>
				<width>1180</width>
				<height>45</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>font12</font>
				<label />
			</control>
		</control>
	</controls>
</window>