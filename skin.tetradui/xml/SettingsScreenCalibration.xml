<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>8</defaultcontrol>
	<controls>
		<control type="videowindow">
			<description>videowindow</description>
			<width>1280</width>
			<height>720</height>
		</control>
		<control type="mover" id="8">
			<description>top left mover</description>
			<width>128</width>
			<height>128</height>
			<texturefocus>calibrate-topleft-focus.png</texturefocus>
			<texturenofocus>calibrate-topleft.png</texturenofocus>
			<movingspeed acceleration="180" maxvelocity="300" resettimeout="200" delta="1">
				<eventconfig type="up" />
				<eventconfig type="down" />
				<eventconfig type="left" />
				<eventconfig type="right" />
			</movingspeed>
		</control>
		<control type="mover" id="9">
			<description>right bottom mover</description>
			<width>128</width>
			<height>128</height>
			<texturefocus>calibrate-bottomright-focus.png</texturefocus>
			<texturenofocus>calibrate-bottomright.png</texturenofocus>
			<movingspeed acceleration="180" maxvelocity="300" resettimeout="200" delta="1">
				<eventconfig type="up" />
				<eventconfig type="down" />
				<eventconfig type="left" />
				<eventconfig type="right" />
			</movingspeed>
		</control>
		<control type="mover" id="10">
			<description>subtitle position mover</description>
			<width>400</width>
			<height>128</height>
			<texturefocus>calibrate-subtitles-focus.png</texturefocus>
			<texturenofocus>calibrate-subtitles.png</texturenofocus>
			<movingspeed acceleration="180" maxvelocity="300" resettimeout="200" delta="1">
				<eventconfig type="up" />
				<eventconfig type="down" />
			</movingspeed>
		</control>
		<control type="resize" id="11">
			<description>pixel aspect ratio box</description>
			<top>270</top>
			<width>288</width>
			<height>288</height>
			<texturefocus>calibrate-pixelratio-focus.png</texturefocus>
			<texturenofocus>calibrate-pixelratio.png</texturenofocus>
			<movingspeed acceleration="140" maxvelocity="300" resettimeout="180" delta="1">
				<eventconfig type="left" />
				<eventconfig type="right" />
			</movingspeed>
		</control>
		<control type="mover" id="12">
			<description>Reset Calibration</description>
			<top>620</top>
			<width>100</width>
			<height>100</height>
			<texturefocus>calibrate-reset.png</texturefocus>
			<texturenofocus colordiffuse="66ffffff">calibrate-reset.png</texturenofocus>
		</control>
		<control type="group">
			<control type="label">
				<description>header label</description>
				<top>20</top>
				<width>1280</width>
				<label>[B]$LOCALIZE[214][/B]</label>
				<align>center</align>
			</control>
			<control type="label" id="2">
				<description>coordinates label</description>
				<top>50</top>
				<width>1280</width>
				<label />
				<align>center</align>
			</control>
			<control type="label" id="3">
				<description>help information</description>
				<top>100</top>
				<width>1280</width>
				<label />
				<align>center</align>
			</control>
			<control type="label" id="4">
				<description>value information</description>
				<top>550</top>
				<width>1280</width>
				<label />
				<align>center</align>
			</control>
		</control>
	</controls>
</window>